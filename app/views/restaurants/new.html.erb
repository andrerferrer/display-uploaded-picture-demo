<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :photo, as: :file, 
              input_html: { class: 'custom-file-input'}, 
              label_html: { class: 'custom-file-label' }, 
              wrapper_html: { class: 'custom-file' } %>
  
  <div id="preview" class='my-3'></div>
  <%= f.submit %>
<% end %>

